{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "module": "Preserve",
        "moduleDetection": "force",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowJs": true,
        "exactOptionalPropertyTypes": true,
        "sourceMap": true,
        "removeComments": true,
        "types": ["node"]
    }
}
