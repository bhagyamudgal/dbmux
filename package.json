{
    "name": "dbmux",
    "version": "2.1.1",
    "description": "A flexible database management CLI tool with persistent configuration",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "dbmux": "dist/index.js"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bhagyamudgal/dbmux.git"
    },
    "bugs": {
        "url": "https://github.com/bhagyamudgal/dbmux/issues"
    },
    "homepage": "https://github.com/bhagyamudgal/dbmux#readme",
    "scripts": {
        "dev": "bun src/index.ts",
        "dev:watch": "bun --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target node && chmod +x dist/index.js",
        "build:ts": "tsc -p tsconfig.build.json && chmod +x dist/index.js",
        "start": "bun dist/index.js",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit -p tsconfig.json",
        "lint": "eslint . --ext .ts",
        "format:check": "prettier --check .",
        "format": "prettier --write .",
        "prepublishOnly": "bun run clean && bun run build",
        "postinstall": "test -f ./dist/index.js && chmod +x ./dist/index.js || true",
        "build:binary": "mkdir -p binaries && bun build src/index.ts --compile --outfile binaries/dbmux",
        "build:linux": "mkdir -p binaries && bun build src/index.ts --compile --target=bun-linux-x64 --outfile binaries/dbmux-linux-x64",
        "build:macos-intel": "mkdir -p binaries && bun build src/index.ts --compile --target=bun-darwin-x64 --outfile binaries/dbmux-darwin-x64",
        "build:macos-arm": "mkdir -p binaries && bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile binaries/dbmux-darwin-arm64",
        "build:windows": "mkdir -p binaries && bun build src/index.ts --compile --target=bun-windows-x64 --outfile binaries/dbmux-windows-x64.exe",
        "build:binaries": "bun run build:linux && bun run build:macos-intel && bun run build:macos-arm && bun run build:windows",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:bun": "bun test",
        "coverage": "vitest run --coverage",
        "prepare": "husky",
        "release": "./release.sh"
    },
    "keywords": [
        "cli",
        "database",
        "postgresql",
        "postgres",
        "sql",
        "management",
        "query",
        "typescript",
        "brocli"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=22.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@types/command-exists": "^1.2.3",
        "@types/node": "^24.0.10",
        "@types/pg": "^8.15.4",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "@vitest/coverage-v8": "3.2.4",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "^3.6.2",
        "ts-mockito": "^2.6.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.35.1",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@drizzle-team/brocli": "^0.11.0",
        "@inquirer/prompts": "^7.6.0",
        "@types/table": "^6.3.2",
        "chalk": "^5.4.1",
        "cli-table3": "^0.6.5",
        "command-exists": "^1.2.9",
        "pg": "^8.16.3",
        "table": "^6.9.0"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
