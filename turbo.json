{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
        },
        "build:binaries": {
            "dependsOn": ["build"],
            "inputs": ["$TURBO_DEFAULT$"],
            "outputs": ["binaries/**"],
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", "tests/**"],
            "outputs": ["coverage/**"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "typecheck": {
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        }
    }
}
